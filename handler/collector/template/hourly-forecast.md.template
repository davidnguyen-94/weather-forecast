{{define "hourly-table"}}
<table>
    <tr>
        <th>Hour</th>
        {{ range $i, $weather := . -}}
            <td>          
            {{ $formattedHour := formatHourOnly $weather.StartTime $weather.Timezone }}
            {{ if eq $formattedHour (currentHour) }}
                <strong>{{ formatHour $weather.StartTime $weather.Timezone}}</strong>
            {{ else }}
                {{ formatHour $weather.StartTime $weather.Timezone}}
            {{ end }}
            </td>
        {{- end }}
    </tr>
    <tr>
        <th>Weather</th>
        {{ range $i, $weather := . -}}
            <td><img src="{{ $weather.Icon}}"></img></td>
        {{- end }}
    </tr>
    <tr>
        <th>Condition</th>
        {{ range $i, $weather := . -}}
            <td width="200px">{{ $weather.Condition}}</td>
        {{- end }}
    </tr>
    <tr>
        <th>Temperature</th>
        {{ range $i, $weather := . -}}
            <td>{{ $weather.AvgTempC}} Â°C</td>
        {{- end }}
    </tr>
    <tr>
        <th>Wind</th>
        {{ range $i, $weather := . -}}
            <td>{{ $weather.AvgWindKph}} kph</td>
        {{- end }}
    </tr>
</table>
{{end}}